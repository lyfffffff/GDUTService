/* pages/regist/regist.wxss */
page{
  background-color: #eff1f8;
  padding: 20rpx;
}

.tabs_title{
  display: flex;
}
.tr{
  margin-bottom: 40rpx;
  width: 100%;
  height: 750rpx;
 /* border:1px solid red; */
}


.title{
  margin-left: 2%;
  width: 20%;
	font-weight: 700;
  height: 60rpx;
  padding: 0 10rpx;
  background-color: #81c8e4;
  font-size: 35rpx;
  color: #ccc;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  color:#fff;
  letter-spacing: 6rpx;
  margin-bottom: 10rpx;
}
textarea{
  background-color: #fff;
  margin-left: 15rpx;
  width: 85%;
  height: 80%;
	border-radius: 10px;
  border: 2px solid #BCE8F1;
  padding: 15rpx 20rpx;
}
.placeholder{
 font-size: 35rpx;
}
.submit{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #5BC0DE;
  color: #fff;
  border-radius: 5px;
  margin-top: 30rpx;
  letter-spacing: 5rpx;
}

.feedback_content{
  margin-top: 30rpx;
  width: 95%;
}

.feedback_content .feedback_item{
background-color: #fff;
font-size: 30rpx;
padding: 15rpx 25rpx;
border-bottom: 1rpx solid #ccc;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;

}

.feedback{
  display: block;
  float: right;
  font-size: 25rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  width: 100rpx;
  color: #5BC0DE;
  border-radius: 20rpx;
  border: 2px #f8b994 solid;
}
.content{
  display: block;
  float: left;
  width: 70%;
  overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
}