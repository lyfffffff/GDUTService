/* pages/publish/publish.wxss */

.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.theTable{
	position: absolute;
  top: 23%;
  left: 5%;
	background-color: rgba(255,255,255,0.9);
	height: 920rpx;
	width: 75%;
	border-radius: 25rpx;
	padding: 30rpx 50rpx 0 50rpx;
}
.writePublish{
  display: flex;
  align-items: center;
}
.writePublish .pickTheme{
  font-weight: 600;
  height: 60rpx;
  padding: 0 10rpx;
  background-color: #81c8e4;
  font-size: 25rpx;
  color: #ccc;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  color:#fff;
  letter-spacing: 6rpx;
}

.writePublish .select .down{
  width: 40rpx;
 height: 40rpx;
 display: block;
 transition:transform 0.3s;
}
.select_box{
float:left;
 background: #fff;
 width: 40%;
 position: relative;
}
.select{
 box-sizing: border-box;
 width: 100%;
 height: 70rpx;
 border:1px solid #efefef;
 border-radius: 8rpx;
 display: flex;
 align-items: center;
 padding: 0 20rpx;
}
.select_text{
 font-size: 30rpx;
 flex: 1;
}

.select_img_rotate{
 transform:rotate(180deg); 
}
.option_box{
 position: absolute;
 top: 70rpx;
 width: 100%;
 border:1px solid #efefef;
 box-sizing: border-box;
 background-color:#fff;
 height: 0;
 overflow-y: auto;
 border-top: 0;
 background: #fff;
 transition: height 0.3s;
}
.option{
 display: block;
 line-height: 40rpx;
 font-size: 30rpx;
 border-bottom: 1px solid #efefef;
 padding: 10rpx;
}
.tr{
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
 /* border:1px solid red */
}
caption{
	font-size: 40rpx;
	text-align: left;
	font-weight: 600;
}
.title{
	display: block;
	float: left;
	text-align: center;
	line-height: 60rpx;
	width: 20%;
	color: #333;
  margin-right: 20rpx;
}
input{
	width: 70%;
	height: 60rpx;
	border-radius: 2px;
  border: 1px solid #BCE8F1;
  padding-left: 20rpx;
}
.placeholder{
 font-size: 35rpx;
}


.default{
  color:#5E616D;
}

.submit{
  margin-right:0rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  background-color: #5BC0DE;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  color: #fff;
  width: 180rpx;
  border-radius: 5px;
  font-weight: 800;
}
.toAuthorTitle{
  font-weight: 700;
  font-size: 40rpx;
  color:var(--themeColor);
  margin-left: 100rpx;
}
.margin{
  margin-top:100rpx;
}
.toAuthor{
  display: block;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 250rpx;
  background-color: #53e099;
  border-radius: 10rpx;
  color:#fff;
  text-align: center;
}
.area{
  /* border: 1px solid red; */
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
textarea{
  width: 70%;
  height: 200rpx;
  border: 1px solid #BCE8F1;
  padding-left: 20rpx;
}